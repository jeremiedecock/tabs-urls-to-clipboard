{
  "manifest_version": 3,
  "name": "Firefox Tab Manager",
  "version": "1.0.0",
  "description": "Copy selected tabs URLs to clipboard as markdown links",
  "homepage_url": "https://github.com/jdhp/firefox-tab-manager",
  "author": "Jérémie",
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "commands": {
    "toggle-feature": {
      "suggested_key": { "default": "Ctrl+Shift+U" },
      "description": "Copy selected tabs to clipboard"
    }
  },
  "permissions": [
    "tabs",
    "clipboardWrite",
    "notifications",
    "storage"
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon-48.png",
    "default_title": "Firefox Tab Manager"
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "default_locale": "en"
}